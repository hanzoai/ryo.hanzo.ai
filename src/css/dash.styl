.dash
  display: flex
  flex-direction: column

  & > *
    +above($pageWidth + 1)
      padding-left: 'calc((100% - %s) / 2)' % $pageWidth
      padding-right: 'calc((100% - %s) / 2)' % $pageWidth
    +below($pageWidth)
      padding-left $spacing * 4
      padding-right $spacing * 4

.dash-header
.dash-sub-header
.dash-sub-footer
.dash-footer
  display: flex
  flex-direction: row

.dash-header
  mShadowed(1.5, $mDropShadowCardColor)

  background-color: $hanzoIndigo
  align-items: center
  padding-top: $spacing * 2
  padding-bottom: $spacing * 2

  z-index: 1

.dash-body
  padding-top: $spacing * 4
  padding-bottom: $spacing * 4
  background-color: $grey100
  height: 90vh
  display: table
  width: 100%
