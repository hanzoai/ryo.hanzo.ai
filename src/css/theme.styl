.bg.bg
  z-index: -1
  position: absolute
  left: 0
  top: 0
  width: 100%
  height: 100%

  &:after
    content: ''
    background-color: $hanzoGreen
    position: absolute
    right: 0
    top: 0
    height: 100%
    width: 35vw

  +below($tabletWidth)
    &:before
      width: 100vw

    &:after
      width: 0vw

hero
  .bg
    &:before
      content: ''
      background: linear-gradient(180deg, #022357 0%, #430e75 80%, #582289 100%)
      position: absolute
      left: 0
      top: 0
      height: 100%
      width 65vw

.yellow
  color: $amber500

.red
  color: $red500

.green
  color: $green500

.teal
  color: $teal500

.card
  box-shadow: 0 1px 4px 0 rgba(0,0,0,0.14)
  border-radius: 4px

button:hover, .button:hover, button:focus, .button:focus
  box-shadow: 2px 2px 2px 2px rgba(0,0,0,0.075)
