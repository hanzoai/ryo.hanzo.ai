html
  font-size: 1em

body
  font-weight: 400
  line-height: 1.45
  color: $white

p
  margin-bottom: 1.3em
  font-size: 1.1em

h1, h2, h3, h4
  margin: 0 0 0.5em
  font-weight: inherit
  line-height: 1.2

h1
  margin-top: 0
  font-size: 3.998rem

h2
  font-size: 2.827rem

h3
  font-size: 1.999rem

h4
  font-size: 1.414rem

small, .font_small
  font-size: 0.707rem


+below($phoneWidth)
  h1
    font-size: 3.157rem

  h2
    font-size: 2.369rem

  h3
    font-size: 1.777rem

  h4
    font-size: 1.333rem

  small, .font_small
    font-size: 0.75rem
